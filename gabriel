const qrcode = require('qrcode-terminal');
const { Client } = require('whatsapp-web.js');
const client = new Client();

client.on('qr', qr => {
    qrcode.generate(qr, {small: true});
});

client.on('ready', () => {
    console.log('Whatsapp iniciado!');
    main();
});

client.initialize();

async function getGroupId(groupName) {
    const chats = await client.getChats();
    const groupChat = chats.find(chat => chat.isGroup && chat.name === groupName);
    if (groupChat) {
        return groupChat.id._serialized;
    } else {
        return null;
    }
}

async function main() {
    const groupName = 'ROB√î CHOPP'; // Substitua pelo nome real do seu grupo
    const groupId = await getGroupId(groupName);
    if (groupId) {
        console.log('ID do grupo:', groupId);
    } else {
        console.log('Grupo n√£o encontrado');
    }
}

const conversas = {};

const GROUP_ID = '120363159325014028@g.us';

const TEMPO_MINIMO_ENTRE_MENSAGENS = 12 * 60 * 1000; // 30 minutos em milissegundos

const fs = require('fs');
const { MessageMedia } = require('whatsapp-web.js');

client.on('message', message => {
    const agora = Date.now();
    const conversa = conversas[message.from];

    // Verifica se a mensagem recebida √© o gatilho desejado (insens√≠vel a mai√∫sculas e min√∫sculas)
    if (message.body && (message.body.toUpperCase() === 'INICIAR ATENDIMENTO' || 
        (!conversa || !conversa.estado || agora - conversa.ultimaMensagem > TEMPO_MINIMO_ENTRE_MENSAGENS))) {
        // Envia uma resposta ao usu√°rio
        client.sendMessage(message.from, 'Salve alcoolizado! Sou o Le√£o da Chopp e vou iniciar o seu atendimento.\n\n\n\nCaso deseje reiniciar o atendimento a qualquer momento, basta digitar INICIAR ATENDIMENTO.');
        
        // Armazena o nome do usu√°rio em uma vari√°vel separada
        const nome = conversa && conversa.nome;
        
        // Atualiza a vari√°vel conversas
        conversas[message.from] = {};
        
        // Restaura o nome do usu√°rio na vari√°vel conversas
        if (nome) {
            conversas[message.from].nome = nome;
        }

        if (conversa && conversa.nome) {
            // O nome do usu√°rio j√° est√° armazenado, envia as op√ß√µes dispon√≠veis
            client.sendMessage(message.from, `Beleza ${conversa.nome}, agora me fala o que voc√™ deseja:\n\n1) Plano de s√≥cio.\n\n2) Compra de materiais.\n\n3) Falar com um atendente.\n`);
            conversas[message.from].estado = 'NOME_DEFINIDO';
        } else {
            // O nome do usu√°rio ainda n√£o est√° armazenado, solicita que ele informe seu nome
            client.sendMessage(message.from, 'Me fala o seu nome ou como gostaria de ser chamado por favor.');

            // Atualiza o estado da conversa para aguardar o nome do usu√°rio
            if (!conversa) {
                conversas[message.from] = {};
