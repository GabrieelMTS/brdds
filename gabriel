const qrcode = require('qrcode-terminal');
const { Client } = require('whatsapp-web.js');
const client = new Client();

client.on('qr', qr => {
    qrcode.generate(qr, {small: true});
});

client.on('ready', () => {
    console.log('Whatsapp iniciado!');
    main();
});

client.initialize();

async function getGroupId(groupName) {
    const chats = await client.getChats();
    const groupChat = chats.find(chat => chat.isGroup && chat.name === groupName);
    if (groupChat) {
        return groupChat.id._serialized;
    } else {
        return null;
    }
}

async function main() {
    const groupName = 'ROBÔ CHOPP'; // Substitua pelo nome real do seu grupo
    const groupId = await getGroupId(groupName);
    if (groupId) {
        console.log('ID do grupo:', groupId);
    } else {
        console.log('Grupo não encontrado');
    }
}

const conversas = {};

const GROUP_ID = '120363159325014028@g.us';

const TEMPO_MINIMO_ENTRE_MENSAGENS = 12 * 60 * 1000; // 30 minutos em milissegundos

const fs = require('fs');
const { MessageMedia } = require('whatsapp-web.js');

client.on('message', message => {
    const agora = Date.now();
    const conversa = conversas[message.from];

    // Verifica se a mensagem recebida é o gatilho desejado (insensível a maiúsculas e minúsculas)
    if (message.body && (message.body.toUpperCase() === 'INICIAR ATENDIMENTO' || 
        (!conversa || !conversa.estado || agora - conversa.ultimaMensagem > TEMPO_MINIMO_ENTRE_MENSAGENS))) {
        // Envia uma resposta ao usuário
        client.sendMessage(message.from, 'Salve alcoolizado! Sou o Leão da Chopp e vou iniciar o seu atendimento.\n\n\n\nCaso deseje reiniciar o atendimento a qualquer momento, basta digitar INICIAR ATENDIMENTO.');
        
        // Armazena o nome do usuário em uma variável separada
        const nome = conversa && conversa.nome;
        
        // Atualiza a variável conversas
        conversas[message.from] = {};
        
        // Restaura o nome do usuário na variável conversas
        if (nome) {
            conversas[message.from].nome = nome;
        }

        if (conversa && conversa.nome) {
            // O nome do usuário já está armazenado, envia as opções disponíveis
            client.sendMessage(message.from, `Beleza ${conversa.nome}, agora me fala o que você deseja:\n\n1) Plano de sócio.\n\n2) Compra de materiais.\n\n3) Falar com um atendente.\n`);
            conversas[message.from].estado = 'NOME_DEFINIDO';
        } else {
            // O nome do usuário ainda não está armazenado, solicita que ele informe seu nome
            client.sendMessage(message.from, 'Me fala o seu nome ou como gostaria de ser chamado por favor.');

            // Atualiza o estado da conversa para aguardar o nome do usuário
            if (!conversa) {
                conversas[message.from] = {};
            }
            conversas[message.from].estado = 'AGUARDANDO_NOME';
        }
    } else {
        // Atualiza a hora da última mensagem recebida
        if (!conversa) {
            conversas[message.from] = {};
        }
        conversas[message.from].ultimaMensagem = agora;

        // Verifica se a conversa existe e se o estado é 'AGUARDANDO_NOME'
        if (conversa && conversa.estado === 'AGUARDANDO_NOME') {
            // Define o nome do usuário e atualiza o estado da conversa
            conversa.nome = message.body;
            conversa.estado = 'NOME_DEFINIDO';

            // Envia uma resposta ao usuário com as opções disponíveis
            client.sendMessage(message.from, `Beleza ${conversa.nome}, agora me fala o que você deseja:\n\n1) Plano de sócio.\n\n2) Compra de materiais.\n\n3) Falar com um atendente.\n`);
        } else if (conversa && conversa.estado === 'NOME_DEFINIDO') {
            // Verifica qual opção o usuário selecionou
            if (message.body === '1') {
                // O usuário selecionou a opção 1
                client.sendMessage(message.from, `Se liga ${conversa.nome}, estamos com o melhor plano de sócio do Brasil:\n\n1) Conheça nossos benefícios.\n\n2) Visualizar camisa de sócios.\n\n3) Formas de pagamento.\n\n4) Voltar ao atendimento.`);
                conversas[message.from].estado = 'VISUALIZANDO_PLANO_SOCIO';

            } else if (message.body === '2') {
                // O usuário selecionou a opção 2   
                client.sendMessage(message.from, `Então ${conversa.nome}, esses são os nossos materiais disponíveis para venda nesse momento:\n\n1) Regata.\n\n2) Camisa.\n\n3) Bandeira de mão.\n\n4) Faixa de mão.\n\n5) Boné.\n\n6) Copos.\n\n7) Novidades em breve.\n\n8) Voltar ao menu principal.`);
                conversas[message.from].estado = 'VISUALIZANDO_COMPRA_DE_MATERIAIS';


            } else if (message.body === '3') {
                // O usuário selecionou a opção 3
                client.sendMessage(message.from, `Então ${conversa.nome}, estamos chamando um atendente.`);
                client.sendMessage(GROUP_ID, `⚠Solicitação de atendimento.⚠\n\nNome: ${conversa.nome}\n Visualizando: Menu Inicial`);

            } else if (message.body === '4') {
                // O usuário selecionou a opção 4
                client.sendMessage(message.from, `Então ${conversa.nome}, estamos chamando um atendente.`);
                client.sendMessage(GROUP_ID, `⚠Solicitação de atendimento.⚠\n\nNome: ${conversa.nome}\n Visualizando: Menu Inicial`);
            }
        } else if (conversa && conversa.estado === 'VISUALIZANDO_PLANO_SOCIO') {
            // Verifica qual opção o usuário selecionou
            if (message.body === '1') {
